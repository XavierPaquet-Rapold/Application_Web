<%- include ('../partials/header') %>
<% if(outils.length > 0) { %></if>
    <form action="/categorie/:id">

        <style>
            .ecart {
                margin: 5px;
                margin-top: 50px;
                margin-left: 55px;
            }
    
            a {
                color: black;
            }
    
            a:hover {
                color: #000;
                text-decoration: none;
            }
        </style>
    
        <div class="container">
            <div class="row custom-line">

                <% outils.forEach(function(row){ %>
                    
                    <a class="ecart" href="/produit/<%= row.nom %>">
                        <div class="col align-self-start img-thumbnail">
                            <img max width="475" max height="350" src="<%= row.image %>" />
                            <div class="col text-center">
                                <textbox>
                                    <%= row.nom %><br>
                                    <b><%= row.prix %>$</b>
                                </textbox>
                            </div>
                        </div>
                    </a>
                    
                <% }) %>

            </div>
        </div>

    </form>
    <% }else {%>
        <p><strong> Une erreur s'est produit lors de la rêquete. S'il vous plaît, contacter l'administrateur</strong></p>
    <% } %>
    <%- include ('../partials/footer') %>